{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
		"sourceMap": true,
    "esModuleInterop": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
